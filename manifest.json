{
  "manifest_version": 2,
  "name": "Try ShopAdvisor",
  "author": "Howard Gil",
  "short_name": "Try ShopAdvisor",
  "description": "Adds ShopAdvisor widget to your e-commerce site",
  "version": "1.0",
  "icons": {
    "128": "ShopAdvisor Icon.png"
  },
  "browser_action": {
    "default_title": "Try ShopAdvisor"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "*://*.hivebrands.com/*",
    "*://*.getbezel.com/*",
    "*://*.shortylove.com/*",
    "*://*.eightsleep.com/*"
  ]
}
